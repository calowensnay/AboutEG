@model DateTime?

@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" />

}
else
{
    <input type="date" value="@Model.Value.ToString("dd/mm/yyyy mm:ss")"
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" />
}